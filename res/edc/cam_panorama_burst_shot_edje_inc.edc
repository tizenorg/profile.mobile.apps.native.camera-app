				}\
				after: "arrow,move,right,ani,start,"interval_name;\
			}\
			program {\
				name: "arrow,move,up,ani,start,"interval_name;\
				signal: "arrow,move,up,ani,start,"interval_name;\
				source: "*";\
				action: STATE_SET "state_1" 0.0;\
				target: "up_arrow" ;\
				transition: ACCELERATE interval_value;\
				after: "arrow,move,up,ani,1,"interval_name;\
			}\
			program {\

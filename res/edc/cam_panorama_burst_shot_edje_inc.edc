#define PANORAMA_ANI_STEP(interval_name, interval_value) \
		program {\
				name: "arrow,move,up,"interval_name;\
				source: "prog";\
				signal: "arrow,move,up,"interval_name;\
				script: {\
					set_state(PART:"up_arrow", "default", 0.0);\
					set_state(PART:"down_arrow", "dim", 0.0);\
					set_state(PART:"left_arrow", "dim", 0.0);\
					set_state(PART:"right_arrow", "dim", 0.0);\
					set_state(PART:"up_arrow_text", "default", 0.0);\
					set_state(PART:"down_arrow_text", "dim", 0.0);\
					set_state(PART:"left_arrow_text", "dim", 0.0);\
					set_state(PART:"right_arrow_text", "dim", 0.0);\
					set_state(PART:"warningframe", "up", 0.0);\
				}\
				after: "arrow,move,up,ani,start,"interval_name;\
			}\
			program {\
				name: "arrow,move,down,"interval_name;\
				source: "prog";\
				signal: "arrow,move,down,"interval_name;\
				script: {\
					set_state(PART:"up_arrow", "dim", 0.0);\

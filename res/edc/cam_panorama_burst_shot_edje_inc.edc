#define WARNING_TXT_UP(part_name, to_bg, text_offset) \
	part { name: part_name; \
		type: TEXT; \
		effect: OUTLINE;\
		mouse_events: 1; \
		scale: 1; \
		description { \
			state: "default" 0.0; \
			rel1 { relative: 0.0 0.0; to: to_bg; offset:0 (-text_offset);} \
			rel2 { relative: 1.0 0.0; to: to_bg;} \
			color:245 245 245 255; \
			text { \
				size: 15; \
				align: 0.5 0.5; \
			} \
		} \
		description { \
			state: "dim" 0.0; \
			inherit: "default" 0.0; \
			visible: 0.0; \
		} \
	}


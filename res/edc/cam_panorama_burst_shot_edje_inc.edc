					set_state(PART:"right_arrow_text", "dim", 0.0);\
					set_state(PART:"warningframe", "up", 0.0);\
				}\
				after: "arrow,move,down,ani,start,"interval_name;\
			}\
			program {\
				name: "arrow,move,left,"interval_name;\
